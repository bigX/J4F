<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.bigd.j4f.MainActivity" >

   
    
    
    
    <MediaController
        android:id="@+id/m1"
        android:layout_width="match_parent"
        android:layout_height="200dip"
     
        android:layout_marginTop="212dp" >

    </MediaController>
    
    
      <ImageButton
         android:id="@+id/btn_play"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/title_wrap"
        
         android:src="@drawable/abc_menu_dropdown_panel_holo_light" />
    
    
    
     <include
        android:id="@+id/title_wrap"
        layout="@layout/moudle_title" />

     <ImageButton
         android:id="@+id/btn_pause"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/btn_play"
         android:layout_marginRight="72dp"
         android:src="@drawable/abc_menu_hardkey_panel_holo_dark" />
   
</RelativeLayout>